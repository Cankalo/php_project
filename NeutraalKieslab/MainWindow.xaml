<Window x:Class="NeutraalKieslab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neutraal Kieslab - Onpartijdige Stemwijzer" Height="900" Width="1400" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#34495E"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#27AE60"/>
        <SolidColorBrush x:Key="LightGray" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="DarkGray" Color="#7F8C8D"/>

        <!-- Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- User Profile Button Style -->
        <Style x:Key="UserProfileStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#219A52"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Ellipse Width="40" Height="40" Fill="{StaticResource AccentGreen}" Margin="0,0,15,0"/>
                    <TextBlock Text="Neutraal Kieslab" FontSize="24" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Home" Style="{StaticResource NavButtonStyle}" Click="Home_Click"/>
                    <Button Content="Nieuws" Style="{StaticResource NavButtonStyle}" Click="Nieuws_Click"/>
                    <Button Content="Stemwijzer" Style="{StaticResource NavButtonStyle}" Click="Stemwijzer_Click"/>
                    <Button Content="Partijen" Style="{StaticResource NavButtonStyle}" Click="Partijen_Click"/>
                    <Button Content="Over Ons" Style="{StaticResource NavButtonStyle}" Click="OverOns_Click"/>
                </StackPanel>

                <!-- User Area (Dynamic) -->
                <Grid Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <!-- Login Button (shown when not logged in) -->
                    <Button x:Name="LoginButton" Content="🔐 Inloggen" 
                           Style="{StaticResource NavButtonStyle}" 
                           Click="Inloggen_Click" Visibility="Visible"/>

                    <!-- User Profile Area (shown when logged in) -->
                    <StackPanel x:Name="UserProfileArea" Orientation="Horizontal" 
                               VerticalAlignment="Center" Visibility="Collapsed">

                        <!-- User Info -->
                        <StackPanel Orientation="Vertical" Margin="0,0,10,0" VerticalAlignment="Center">
                            <TextBlock x:Name="UserNameText" Text="Jan de Vries" 
                                      FontSize="14" FontWeight="Bold" 
                                      Foreground="White" HorizontalAlignment="Right"/>
                            <TextBlock x:Name="UserEmailText" Text="jan@example.com" 
                                      FontSize="11" Foreground="#BDC3C7" 
                                      HorizontalAlignment="Right"/>
                        </StackPanel>

                        <!-- User Avatar/Profile Button -->
                        <Button x:Name="UserProfileButton" 
                               Width="40" Height="40"
                               Background="{StaticResource AccentGreen}"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="ShowUserMenu">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="20" BorderThickness="2" BorderBrush="White">
                                        <TextBlock Text="👤" FontSize="18" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#219A52"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ContentControl x:Name="ContentArea" Grid.Row="1" Margin="0"/>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBlue}">
            <TextBlock Text="© 2025 Neutraal Kieslab - Onpartijdige politieke informatie voor iedereen" 
                      FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- User Menu Popup (Hidden by default) -->
        <Border x:Name="UserMenuPopup" Background="White" 
               CornerRadius="8" Padding="0" 
               HorizontalAlignment="Right" VerticalAlignment="Top"
               Margin="0,80,20,0" Width="250" Visibility="Collapsed"
               Panel.ZIndex="1000">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- User Header -->
                <Border Background="{StaticResource PrimaryBlue}" CornerRadius="8,8,0,0" Padding="20,15">
                    <StackPanel>
                        <TextBlock x:Name="PopupUserNameText" Text="Jan de Vries" 
                                  FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="PopupUserEmailText" Text="jan@example.com" 
                                  FontSize="12" Foreground="#BDC3C7"/>
                        <TextBlock x:Name="PopupUserStatsText" Text="Lid sinds: 12-06-2025" 
                                  FontSize="11" Foreground="#BDC3C7" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Margin="10">
                    <Button Content="📊 Mijn Stemwijzer Resultaten" 
                           Background="Transparent" BorderThickness="0" 
                           HorizontalAlignment="Stretch" Padding="10,8"
                           FontSize="14" Cursor="Hand"
                           Click="ViewMyResults"/>

                    <Button Content="⚙️ Account Instellingen" 
                           Background="Transparent" BorderThickness="0" 
                           HorizontalAlignment="Stretch" Padding="10,8"
                           FontSize="14" Cursor="Hand"
                           Click="ViewAccountSettings"/>

                    <Separator Margin="0,5"/>

                    <Button Content="🚪 Uitloggen" 
                           Background="Transparent" BorderThickness="0" 
                           HorizontalAlignment="Stretch" Padding="10,8"
                           FontSize="14" Cursor="Hand" Foreground="#E53E3E"
                           Click="LogoutUser"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>