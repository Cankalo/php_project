<Application x:Class="NeutraalKieslab.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Resources -->
        <ResourceDictionary>
            <!-- Global Colors -->
            <SolidColorBrush x:Key="GlobalPrimaryBlue" Color="#2C3E50"/>
            <SolidColorBrush x:Key="GlobalSecondaryBlue" Color="#34495E"/>
            <SolidColorBrush x:Key="GlobalAccentGreen" Color="#27AE60"/>
            <SolidColorBrush x:Key="GlobalLightGray" Color="#ECF0F1"/>
            <SolidColorBrush x:Key="GlobalDarkGray" Color="#7F8C8D"/>

            <!-- Global Fonts -->
            <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>

            <!-- Window Style -->
            <Style TargetType="Window">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="Background" Value="{StaticResource GlobalLightGray}"/>
            </Style>

            <!-- UserControl Style -->
            <Style TargetType="UserControl">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
            </Style>

            <!-- Global Button Hover Effects -->
            <Style TargetType="Button" x:Key="GlobalButtonHover">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>